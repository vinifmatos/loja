<div class="card-body">
  <%= form_with(model: [:admin, configuracao], url: admin_dadosloja_path, local: true) do |form| %>
    <div class='form-group'>
      <%= form.label :nome_loja %>
      <%= form.text_field :nome_loja, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= form.label :telefone_loja %>
      <%= form.text_field :telefone_loja, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= form.label :email_loja %>
      <%= form.text_field :email_loja, class: 'form-control' %>
    </div>

    <div class='actions'>
      <%= form.submit t('acoes.salvar', model: nil), class: 'btn btn-primary' %>
      <%= link_to t('acoes.cancelar'), admin_dadosloja_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>