<div class="my-3">
  <div class="row">
    <div class="col-lg-12">
      <p>
        <h2><%= @produto.nome %></h2>
        <h6><%= "##{@produto.id}" %></h6>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">

      <div class="card">
        <div class="card-body p-1">
          <%= render 'partials/carrossel_imagens_produto', imagens: @produto.imagens %>
        </div>
      </div>
    </div>

    <div class="col-lg-4 pl-0">
      <div class="card" style="height: 100%">
        <div class="card-body">
          <p class="card-text">
            <h1><%= number_to_currency @produto.preco %></h1>
          </p>
          <%= link_to t("acoes.comprar"), adicionar_carrinho_path(@produto), method: :post, class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-header">
          <h3>Descrição</h3>
        </div>

        <div class="card-body">
          <p class="card-text">
            <%= @produto.descricao %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
